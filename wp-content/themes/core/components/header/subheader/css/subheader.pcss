/* -----------------------------------------------------------------------------
 *
 * Component: Subheader
 *
 * ----------------------------------------------------------------------------- */

.c-subheader {
	position: relative;
	display: flex;
	align-items: center;
	min-height: 260px;
	background: var(--color-grey-light);
	padding:  var(--spacer-20) 0;
	margin-bottom: var(--spacer-80);

	/* CASE: Page with featured image */
	&.c-subheader--has-image {	
		min-height: 440px;
		align-items: flex-end;
		padding:  var(--spacer-20) 0 var(--spacer-80) 0; 
	}
}

/* -----------------------------------------------------------------------------
 * Subheader: Content
 * ----------------------------------------------------------------------------- */

.c-subheader__content {
	position: relative;
}

.c-subheader__title { 
	margin-top: var(--spacer-20);
}

/* -----------------------------------------------------------------------------
 * Subheader: Image component
 * ----------------------------------------------------------------------------- */

.c-subheader__media__image {
	min-height: 440px;
}
