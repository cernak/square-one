/* -----------------------------------------------------------------------------
 *
 * Component: Subheader
 *
 * ----------------------------------------------------------------------------- */

.c-subheader {
	position: relative;
	display: flex;
	align-items: center;
	background: var(--color-grey-light);
	padding: var(--spacer-20) 0;
	margin-bottom: var(--spacer-80);

	@media (--viewport-medium) {
		min-height: 260px;
	}
}

/* CASE: Page with featured image */
.c-subheader--has-image {
	min-height: 308px;

	@media (--viewport-medium) {
		align-items: flex-end;
		padding: var(--spacer-20) 0 var(--spacer-80) 0;
		min-height: 440px;
	}
}

/* -----------------------------------------------------------------------------
 * Subheader: Content
 * ----------------------------------------------------------------------------- */

.c-subheader__content {
	position: relative;
}

.c-subheader__title {
	margin-top: var(--spacer-10);

	@media (--viewport-medium) {
		margin-top: var(--spacer-20);
	}
}

/* -----------------------------------------------------------------------------
 * Subheader: Image component
 * ----------------------------------------------------------------------------- */

.c-subheader__media {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}
